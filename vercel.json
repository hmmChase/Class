{
  "alias": "challenge-board",
  "version": 2,
  "github": {
    "silent": true
  },
  "builds": [
    {
      "src": "backend/bin/www",
      "use": "@now/node-server"
    },
    {
      "src": "frontend/package.json",
      "use": "@now/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/bin/www"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1",
      "continue": true
    }
  ],
  "build": {
    "env": {
      "ACCESS_TOKEN_SECRET": "@cb_access_token_secret",
      "DATABASE_URL": "@cb_database_url",
      "MAIL_USER": "@cb_mail_user",
      "MAIL_PASS": "@cb_mail_pass"
    }
  },
  "env": {
    "ACCESS_TOKEN_SECRET": "@cb_access_token_secret",
    "DATABASE_URL": "@cb_database_url",
    "MAIL_USER": "@cb_mail_user",
    "MAIL_PASS": "@cb_mail_pass"
  }
}
